<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>/WEB-INF/pages/login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>AndroidLoginActivity</servlet-name>
        <servlet-class>activate.AndroidLoginActivity</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AndroidLoginActivity</servlet-name>
        <url-pattern>/AndroidLogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AndroidRegisterActivity</servlet-name>
        <servlet-class>activate.AndroidRegisterActivity</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AndroidRegisterActivity</servlet-name>
        <url-pattern>/AndroidRegister</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AndroidListActivity</servlet-name>
        <servlet-class>activate.AndroidListActivity</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AndroidListActivity</servlet-name>
        <url-pattern>/AndroidChatInfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AndroidChatActivity</servlet-name>
        <servlet-class>activate.AndroidChatActivity</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AndroidChatActivity</servlet-name>
        <url-pattern>/AndroidChatAction</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>activate.LoginActivate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login.jhtml</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>code</servlet-name>
        <servlet-class>activate.CodeActivate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>code</servlet-name>
        <url-pattern>/code.jhtml</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Message</servlet-name>
        <servlet-class>activate.BaseChatActivate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Message</servlet-name>
        <url-pattern>/message.jhtml</url-pattern>
    </servlet-mapping>
</web-app>

